<!DOCTYPE html>
<html lang="en">

<head>
    <title>User Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* Adjust card height */
        .card {
            height: 100%;
        }

        /* Adjust image height */
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .container {
            font-family: "Rubik";
        }
    </style>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
            <!-- CSS FILES -->
            <link rel="preconnect" href="https://fonts.googleapis.com">

            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet">
    
            <link href="/css/bootstrap.min.css" rel="stylesheet">
            <link href="/css/bootstrap-icons.css" rel="stylesheet">
    
    
            <link href="/css/tooplate-little-fashion.css" rel="stylesheet">
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Rubik">
    <style>
        .close-btn{
            background-color: red;
            border-radius: 5px;
            color: white;
            height: auto;
            width: auto;
            &:hover, &:focus {
                background-color: red;

    &:before, &:after {
        background-color: red;
        }
}
    </style>
</head>


<body>
    <%- include('../navbar') %>

    <div class="container">
        <h1 class="text-center">User Bookings</h1>
        <div class="row">
            <% books.forEach((booking)=> { %>


                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= '/'+booking.room.roomImage.replace(/\\/g, '/') %>" class="card-img-top" alt="">



                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title " style="font-weight: bold;">Room Number: <%= booking.room.roomNumber
                                    %>
                            </h5>
                            <p class="card-title">Room Capacity: <%= booking.room.capacity %>
                            </p>

                            <p class="card-text">Dates: <br>
                                <% booking.dates.forEach((date)=> { %>
                                    <%= date.getFullYear() + '/' + date.getMonth() +'/' + date.getDay() + ' ' +
                                        date.getHours() +':00' %><br>
                                        <% }); %>
                            </p>
                            <div class="mt-auto">
                            <p class="card-text " style="font-weight: bold;">
                                <% if (booking.confirmCode===true) { %>
                                    <i class="fa-solid fa-check" style="color: #ff4400;"></i> Confirmed
                                    <% } else { %>
                                        <i class="fa-solid fa-circle-xmark" style="color: #ff4400;"></i> Not Confirmed
                                        <% } %>
                            </p>
                            <button class="close-btn align-self-end btn cancel-btn" data-booking-id="<%= booking._id %>">
                                <% if (booking.canceled===false) { %>
                                Cancel Reservation
                                <% } else { %>
                                OK
                                <% } %>

                            </button>
                        </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <script>
        // Assuming you're using jQuery for simplicity
        $(document).ready(function() {
            $('.cancel-btn').click(function() {
                var bookingId = $(this).data('booking-id');

                // Make an API call to cancel reservation using AJAX
                $.ajax({
                    url: '/book/cancel',
                    method: 'POST',
                    data: { bookingId: bookingId },
                    success: function(response) {
                        // Handle success response
                        console.log('Reservation canceled successfully');
                         $(this).closest('.card').remove();
                    },
                    error: function(xhr, status, error) {
                        // Handle error response
                        console.error('Error canceling reservation:', error);
                    }
                });
            });
        });
    </script>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/Headroom.js"></script>
    <script src="/js/jQuery.headroom.js"></script>
    <script src="/js/slick.min.js"></script>
    <script src="/js/custom.js"></script>
    <script src="https://kit.fontawesome.com/ff1bdbcc7e.js" crossorigin="anonymous"></script>
</body>

</html>