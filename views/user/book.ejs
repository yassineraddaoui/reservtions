<body>
  <section class="preloader">
    <div class="spinner">
      <span class="sk-inner-circle"></span>
    </div>
  </section>
  <%- include('../navbar') %>
    <div id="title" name="title">
      <h1 style="margin: 10%;margin-bottom: 5px;"><span style="color: #FF8457;">Book</span> your meeting Room !</h1>
      <p style="margin-left: 10%;">Select the date of the meeting.</p>
      <select name="capacityFilter" class="form-select" style="width:200px;margin-left: 10%;" id="capacityFilter"
        style="margin: 10%;">
        <option value="0">Select Capacity</option>
        <option value="10">Up to 10 people</option>
        <option value="20">Up to 20 people</option>
        <option value="30">Up to 30 people</option>
      </select>
    </div>
    <div class="wrapper">
      <header>
        <p class="current-date"></p>
        <div class="icons">
          <span id="prev" class="material-symbols-rounded">chevron_left</span>
          <span id="next" class="material-symbols-rounded">chevron_right</span>
        </div>
      </header>
      <div class="calendar">
        <ul class="weeks">
          <li>Sun</li>
          <li>Mon</li>
          <li>Tue</li>
          <li>Wed</li>
          <li>Thu</li>
          <li>Fri</li>
          <li>Sat</li>
        </ul>
        <ul class="days"></ul>

      </div>
      <div class="loginPopup">
        <div class="formPopup" id="popupForm">
          <div class="formContainer">
            <div id="available-hours" class="available-hours"></div>
            <div class="button-container">
              <button type="button" onclick="submitHours()" class="btn primary">Book</button>
              <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div id="roomCardsContainer" name="roomCardsContainer" class="mt-5"></div>
